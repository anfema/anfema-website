<div class="project-text-right--title">
	<h2>
		<span>{{data.titleBefore}}</span>
		<span style="color: {{meta.color}}">{{data.titleColored}}</span>
		<span>{{data.titleAfter}}</span>
	</h2>
	<p>{{data.subTitle}}</p>
</div>

<div class="project-text-right--img">
	{{#if data.img}}
		{{responsive-image image=data.img}}
	{{/if}}
</div>

<div class="project-text-right--description">
	<p>{{data.description}}</p>
</div>

{{yield}}