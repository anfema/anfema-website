<div class="project-text--{{data.orientation}}">
	<div class="project-text__title">
		<h2>
			<span>{{data.titleBefore}}</span>
			<span class="color--{{meta.id}}">{{data.titleColored}}</span>
			<span>{{data.titleAfter}}</span>
		</h2>
		<p>{{data.subTitle}}</p>
	</div>

	<div class="project-text__img">
		{{#if data.img}}
			{{responsive-image image=data.img}}
		{{/if}}
	</div>

	<div class="project-text__description">
		<p>{{data.description}}</p>
	</div>
</div>

{{yield}}