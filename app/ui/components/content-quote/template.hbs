<span class="content-quote__quotationmark quotationmark--open">“</span>

<blockquote class="content-quote__text">
	{{{data.text}}}
</blockquote>

<span class="content-quote__quotationmark quotationmark--closed">”</span>

<cite class="content-quote__source">
	{{{data.source}}}
</cite>

{{#if data.projectId}}
	{{#link-to 'projects.details' data.projectId class='content-quote__project'}}
		{{#if data.projectLinkLabel}}
			{{data.projectLinkLabel}}
		{{else}}
			{{t 'component.contet-quote.action.showProject'}}
		{{/if}}
	{{/link-to}}
{{/if}}

{{yield}}