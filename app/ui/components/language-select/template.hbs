<button
	type="button"
	class="language-select-button {{if isDe 'language-select-button--active'}}"
	data-test-locale='de'
	{{action 'setLocale' 'de'}}
>
	{{t 'component.language-select.action.de'}}
</button>

<button
	type="button"
	class="language-select-button {{if isEn 'language-select-button--active'}}"
	data-test-locale='en'
	{{action 'setLocale' 'en'}}
>
	{{t 'component.language-select.action.en'}}
</button>
