{{#page-overlay}}
	{{#page-menu forceOpaque=true class="page-menu--flat"}}
		<header>
			<a href="#{{projects}}" onclick={{action "scrollToTop"}}>
				{{t "projects.title"}}
			</a>
		</header>

		<ul>
			<li>
				{{#link-to "language"}}{{t "projects.index.nav.back"}}{{/link-to}}
			</li>
		</ul>
	{{/page-menu}}

	{{projects-list projects=model.files}}
{{/page-overlay}}